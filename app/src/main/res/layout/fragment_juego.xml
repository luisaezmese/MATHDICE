<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luisangel.proyecto_2_examen.JuegoFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="304dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/azul1" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/azul2" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/azul3" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/rojo1"/>

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/rojo2"/>

        </LinearLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/dodecaedro" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="346dp"
        android:layout_height="77dp"
        android:gravity="bottom"
        android:layout_gravity="bottom">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewnick"
            android:layout_weight="1" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPuntos"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="RESULTADO:"
            android:id="@+id/textView3"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/resultado"
            android:textSize="30dp" />

        <Button
            android:text="MATHDICE"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/buttonMathdice" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout4"
            android:weightSum="1">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/num1"
                android:textSize="30dp"
                android:text="0"
                android:layout_weight="0.95" />

            <TextView
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:id="@+id/operador"
                android:textSize="30dp"
                android:layout_weight="0.55" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/num2"
                android:textSize="30dp"
                android:text="0"
                android:layout_weight="0.11" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout3"
            android:layout_gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/resta" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/suma" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/igual" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>
